<Window x:Class="Data.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data"
        mc:Ignorable="d" Name="wndPrincipal"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{Binding Path=Text, ElementName=txtEjemplo}" HorizontalAlignment="Left" Margin="43,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="202"/>
        <TextBox x:Name="txtEjemplo" HorizontalAlignment="Left" Height="23" Margin="43,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,103,0,0" TextWrapping="Wrap" Text="Ancho:" VerticalAlignment="Top" Height="24" Width="43"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="104,104,0,0" TextWrapping="Wrap" Text="{Binding Path=Width, ElementName=wndPrincipal}" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,146,0,0" TextWrapping="Wrap" Text="Alto:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="104,145,0,0" TextWrapping="Wrap" Text="{Binding Path=Height, ElementName=wndPrincipal}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
